<% layout("/layouts/boilerplate") %>
  <body>
    <div class="row">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validaton">
      <div class="mb-3">
      <label for="title" class="form-lable">Title</label>
      <input name="listing[title]" 
      placeholder="enter title" 
      type="text" 
      class="form-control"
      required
      />
      <div class="valid-feedback">Title to look good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
        name="listing[description]"
        class="form-control" required></textarea>
      </div>
      <div class="invaled-feedback">Enter Short Description</div>
      <div class="mb-3">
        <label for="image" class="form-lable">Image Link</label>
        <input name="listing[image]"placeholder="enter image URL/Link"type="text"class="form-control" required>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
        </div>
        <div class="non-valid"></div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
        </div>
        <div class="invaled-feedback">Enter Country Name Here</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input name="listing[location]"placeholder="enter location"type="text" class="form-control" required />
      </div>
      <div class="invaled-feedback">Enter Location Here</div>
      <button class="btn btn-dark">Add</button>
    </form>
    <br><br>
  </div>
  </div>
  </body>